
#
# Place this file in ~/.ctermrc to be read on start up
#

# Characters considered part of a "word" when double clicking
word_chars = -A-Za-z0-9/:.?&@~_=%+

# Lines of scrollback
scrollback = 2000

# Enable scrollbar
scrollbar = 0

# Default font
font = Bitstream Vera Sans Mono 8

# Default terminal size
# Suffix these numbers with "px" or "char" to specify units.
initial_width = 80 char
initial_height = 24 char

# Audible bell
audible_bell = true

# Visible bell
visible_bell = false

# Backspace Behavior
# This determines what is sent to the terminal when backspace is pressed.
# Valid values are:
#   * auto
#   * ascii_backspace - Sends ascii Backspace (0x08) which is the same as
#                       control-h.
#   * ascii_delete - Sends ascii Del (0x7F).  This behaves the same as
#                    ascii_backspace for most programs.  Use this if you need
#                    to distinguish backspace and control-h.
backspace_behavior = auto

# Confirm Close
# If a process is running in a tab or window, prompt user before closing.
confirm_close_window = true
confirm_close_tab = true

# Foreground/background color
foreground = #fff
background = #000

# Transparency
transparent = false
opacity = 80

# Run this program and pass the selected text to it via stdin when key_run is
# activated or the left mouse button is clicked
external_program = cterm_run

# Run this program when a URL is double clicked on and pass the URL as the
# first argument.
url_program = htmlview

# Palette for output
color_0 = #000
color_1 = #a00
color_2 = #0a0
color_3 = #a50
color_4 = #00a
color_5 = #a0a
color_6 = #0aa
color_7 = #aaa
color_8 = #555
color_9 = #f55
color_10 = #5f5
color_11 = #ff5
color_12 = #55f
color_13 = #f5f
color_14 = #5ff
color_15 = #fff

# Key bindings
# Specified as a list of modifiers in angled brackets (like "<Shift>") followed
# by a key.  Keys can be a single letter or number, but symbols such as - and +
# should be spelled out "minus" and "plus".  Empty key bindings are ignored.
# Multiple bindings may be specified for the same action.
key_open_tab = <Alt><Shift>t
key_close_tab = <Alt><Shift>q
key_reload = <Alt><Ctrl><Shift>r
key_run = <Ctrl>Return
key_tab_1 = <Ctrl>1
key_tab_2 = <Ctrl>2
key_tab_3 = <Ctrl>3
key_tab_4 = <Ctrl>4
key_tab_5 = <Ctrl>5
key_tab_6 = <Ctrl>6
key_tab_7 = <Ctrl>7
key_tab_8 = <Ctrl>8
key_tab_9 = <Ctrl>9
key_tab_10 = <Ctrl>0
key_font_size_increase = <Ctrl>plus
key_font_size_decrease = <Ctrl>minus
key_copy = <Ctrl><Shift>c
key_paste = <Ctrl>v
key_select_all =
key_select_none =
